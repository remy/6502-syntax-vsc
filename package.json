{
    "name": "beeb-vsc",
    "displayName": "Beeb VSC",
    "description": "6502/BeebAsm BBC Micro syntax highlighting",
    "version": "0.0.5",
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#5c2d91",
        "theme": "dark"
    },
    "publisher": "simondotm",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/simondotm/beeb-vsc/issues"
    },
    "homepage": "https://github.com/simondotm/beeb-vsc/",
    "repository": {
        "type": "git",
        "url": "https://github.com/simondotm/beeb-vsc.git"
    },
    "engines": {
        "vscode": "^1.4.0"
    },
    "categories": [
        "Languages"
    ],
    "keywords": [
        "6502", "bbc", "micro", "beebasm", "assembly"
    ],
    "activationEvents": [
        "onLanguage:6502",
        "onCommand:extension.target.create",
        "onCommand:extension.target.select"              
    ],
    "main": "./extension",    
    "contributes": {
        "languages": [{
            "id": "6502",
            "aliases": ["6502/BeebAsm Assembly"],
            "extensions": [".asm", ".6502", ".s"],
            "configuration": "./beeb-vsc.configuration.json"
        }],
        "grammars": [{
            "language": "6502",
            "scopeName": "source.asm.6502",
            "path": "./syntaxes/6502.tmLanguage"
        }],
        "configuration": {
            "type": "object",
            "title": "BeebVSC configuration",
            "properties": {
                "beebvsc.assembler": {
                    "type": "string",
                    "default": "BeebAsm.exe",
                    "description": "Your assembler executable (eg. BeebAsm.exe)."
                },
                "beebvsc.emulator": {
                    "type": "string",
                    "default": "BeebEm.exe",
                    "description": "Your preferred emulator executable (eg. BeebEm.exe)."
                },                
                "beebvsc.options": {
                    "type": "object",
                    "default": {},
                    "description": "The BeebASM options object to provide args passed to BeebASM when executed from a command line."
                }
            }
        },           
        "commands": [
        {
            "command": "extension.target.create",
            "title": "BeebVSC: Create new build target"
        },
        {
            "command": "extension.target.select",
            "title": "BeebVSC: Select default build target"
        }],
        "keybindings": [
        {
            "command": "extension.target.create",
            "key": "f9",
            "mac": "f9"
        },
        {
            "command": "extension.target.select",
            "key": "f10",
            "mac": "f10"
        },
        {
            "command": "workbench.action.tasks.test",
            "key": "Ctrl+Shift+T",
            "mac": "Ctrl+Shift+T"
        },
        {
            "command": "workbench.action.tasks.runTask",
            "key": "Ctrl+Shift+R",
            "mac": "Ctrl+Shift+R"
        }]           
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "vscode": "^0.11.0"
    }        
}